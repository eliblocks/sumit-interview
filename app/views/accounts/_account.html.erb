<div id="<%= dom_id account %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= account.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Type:</strong>
    <%= account.type %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this account", account_path(account), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <% unless account.entries.any? %>
      <%= link_to 'Edit this account', edit_account_path(account), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <% end %>
    <hr class="mt-6">
  <% end %>
</div>
